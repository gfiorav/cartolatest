<div class='main-map'>
  <img id='bm'/>
  <div class='main-map-overlay'>
    <div class='metainfo'>
      <h1 id='title'></h1>
      <h2 id='author'></h1>
    </div>
  </div>
</div>
<div class='bottom-bar'>
  <% @cards.each_with_index do |_, index| %>
    <div class='small-map'>
      <img id='sm-<%= index %>'/>
    </div>
  <% end %>
</div>

<script type="text/javascript">
  var cards = <%= raw @cards.map { |card| present_card(card) }.to_json %>
  var currentlyShowing = 0;

  $(document).ready(function () {
    setUp();
    pid = setInterval(loadBoard, 5000);

    function setUp () {
      setupBigMap();
      setupSmallMaps();
    }

    function loadBoard() {
      loadBigMap(cards[currentlyShowing]);
      loadSmallMaps(cards);

      if (currentlyShowing === cards.length - 1) {
        clearInterval(pid);
        window.location.reload();
      } else {
        currentlyShowing++;
      }

    }

    function loadBigMap(card) {
      var bMURL = URLForDimensions(card.url, BMWidth, BMHeight);

      document.getElementById('bm').setAttribute('src', bMURL)
      document.getElementById('title').innerHTML = 'Untitled Map';
      document.getElementById('author').innerHTML = 'by ' + card.username;
    }

    function setupBigMap() {
      var bigMap = document.getElementById('bm');
      var container = $('.main-map');

      BMWidth = container.width();
      BMHeight = container.height();

      setObjectDimensions(bigMap, BMWidth, BMHeight);
    }

    function setupSmallMaps() {
      var container = $('.small-map');

      SMWidth = container.width();
      SMHeight = container.height();

      for (var c in cards) {
        setObjectDimensions(document.getElementById('sm-' + c), SMWidth, SMHeight);
      }
    }

    function loadSmallMaps(cards) {
      for (var c in cards) {
        loadSmallMap(cards[c], c);
      }
    }

    function loadSmallMap(card, index) {
      var sMURL = URLForDimensions(card.url, SMWidth, SMHeight);

      document.getElementById('sm-' + index).setAttribute('src', sMURL)
    }

    function setObjectDimensions(object, width, height) {
      object.setAttribute('width', width);
      object.setAttribute('height', height);
    }

    function URLForDimensions(url, width, height) {
      return url.replace('{X}', Math.floor(width)).replace('{Y}', Math.floor(height));
    }
  })
</script>